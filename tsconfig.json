{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "basics/*": ["src/basics/*"],
      "shared/*": ["src/shared/*"],
      "css/*": ["src/css/*"],
      "ui/*": ["src/ui/*"],
      "features/*": ["src/features/*"],
      "utils/*": ["src/utils/*"],
      "types/*": ["src/types/*"],
      "main": ["src/main.ts"]
    },
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES6",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "jsx": "react",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "DOM",
      "ES5",
      "ES6",
      "ES7",
      "ES2020",
      "ES2022"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ]
}
